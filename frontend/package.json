{
  "name": "utahwatergardens",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "nodemailer": "^7.0.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^6.0.0",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^6.28.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:email": "node src/server.js",
    "start:dev": "concurrently \"npm run start\" \"npm run start:email\"",
    "build": "npx react-scripts build",
    "build:optimize": "npx react-scripts build && node scripts/build-optimize.js",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "build:prod": "NODE_ENV=production npm run build",
    "build:performance": "npm run build && npm run optimize && npm run lighthouse",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "optimize": "node scripts/build-optimize.js",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html --chrome-flags=\"--headless\"",
    "lighthouse:ci": "lighthouse http://localhost:3000 --output json --output-path ./lighthouse-results.json --chrome-flags=\"--headless\"",
    "performance:test": "npm run start & sleep 10 && npm run lighthouse:ci && npm run build:analyze",
    "performance:monitor": "node scripts/performance-monitor.js",
    "bundle:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js --mode static --report",
    "cache:clear": "node scripts/clear-cache.js",
    "vercel-build": "npm run build:performance"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
